@model MugStore.Web.Areas.Admin.ViewModels.Product.CreateViewModel
<div class="row">
    <div class="row">
        <div class="col-md-12">
            <h4>Product</h4>
        </div>
    </div>
    @{
        var action = "Create";
        if (Model.Id > 0)
        {
            action = "Edit";
        }
    }
    @using (Html.BeginForm(action, "Product", FormMethod.Post, new { area = "Admin", @class = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6">
                <fieldset class="form-group">
                    <label for="Title">Title</label>
                    @Html.EditorFor(p => p.Title)
                </fieldset>
            </div>
            <div class="col-md-6">
                <fieldset class="form-group">
                    <label for="Acronym">Acronym</label>
                    @Html.EditorFor(p => p.Acronym)
                </fieldset>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <fieldset class="form-group">
                    <label for="PageTitle">Page Title</label>
                    @Html.EditorFor(p => p.PageTitle)
                </fieldset>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <fieldset class="form-group">
                    <label for="Description">Description</label>
                    @Html.TextAreaFor(p => p.Description, new { @class = "form-control" })
                </fieldset>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <fieldset class="form-group">
                    <label for="Code">Code</label>
                    @Html.EditorFor(p => p.Code)
                </fieldset>
            </div>
            <div class="col-md-4">
                <fieldset class="form-group">
                    <label for="Active">Active</label>
                    <select asp-for="Active" asp-items="Model.ActiveStates" class="form-control"></select>
                </fieldset>
            </div>
            <div class="col-md-4">
                <fieldset class="form-group">
                    <label for="CategoryId">Category</label>
                    <select asp-for="CategoryId" asp-items="Model.CategoriesListItems" class="form-control"></select>
                </fieldset>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <fieldset class="form-group">
                    <label for="Acronym">Link to Source Image</label>
                    @Html.EditorFor(p => p.LinkToSource)
                </fieldset>
            </div>
        </div>
        if (Model.Id > 0)
        {
            <div class="row">
                <div class="col-md-12">
                    <fieldset class="form-group">
                        <label for="PreviewData">Preview Data</label>
                        @Html.EditorFor(p => p.PreviewData)
                    </fieldset>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-md-12">
                @if (Model.Id == 0)
                {
                    <input type="submit" class="btn btn-primary" value="Create">
                }
                else
                {
                    <input type="submit" class="btn btn-primary" value="Edit">
                }
            </div>
        </div>
    }
</div>
